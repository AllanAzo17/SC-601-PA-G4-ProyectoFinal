@model ProyectoFinal.Models.Queue

@{
    ViewBag.Title = "Delete Queue";
}

<h2>Are you sure you want to delete this queue?</h2>

<div>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.Id</dd>

        <dt>Priority</dt>
        <dd>@Model.Priority</dd>
    </dl>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Queue", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}
