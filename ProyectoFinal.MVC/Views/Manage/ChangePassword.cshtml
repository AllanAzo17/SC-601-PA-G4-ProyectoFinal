@model ProyectoFinal.MVC.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar Contraseña";
}

<div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center mb-4">
            <a href="@Url.Action("Index", "Manage")" class="mr-4 p-2 text-gray-400 hover:text-gray-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-gray-900">Cambiar Contraseña</h1>
        </div>
        <p class="text-gray-600">Actualiza tu contraseña para mantener tu cuenta segura</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            
            if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary("", new { @class = "mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700" })
            }
            
            <div class="space-y-6">
                <!-- Current Password -->
                <div>
                    <label for="OldPassword" class="block text-sm font-medium text-gray-700 mb-2">
                        Contraseña actual
                    </label>
                    <div class="relative">
                        @Html.PasswordFor(m => m.OldPassword, new { 
                            @class = "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500",
                            placeholder = "Ingresa tu contraseña actual"
                        })
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                            </svg>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "mt-1 text-sm text-red-600" })
                </div>

                <!-- New Password -->
                <div>
                    <label for="NewPassword" class="block text-sm font-medium text-gray-700 mb-2">
                        Nueva contraseña
                    </label>
                    <div class="relative">
                        @Html.PasswordFor(m => m.NewPassword, new { 
                            @class = "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500",
                            placeholder = "Ingresa tu nueva contraseña"
                        })
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "mt-1 text-sm text-red-600" })
                    <p class="mt-1 text-xs text-gray-500">La contraseña debe tener al menos 6 caracteres</p>
                </div>

                <!-- Confirm Password -->
                <div>
                    <label for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2">
                        Confirmar nueva contraseña
                    </label>
                    <div class="relative">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { 
                            @class = "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500",
                            placeholder = "Confirma tu nueva contraseña"
                        })
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "mt-1 text-sm text-red-600" })
                </div>

                <!-- Submit Button -->
                <div class="flex items-center justify-between pt-4">
                    <a href="@Url.Action("Index", "Manage")" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                        Cancelar
                    </a>
                    <button type="submit" class="inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Cambiar contraseña
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- Security Tips -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-blue-800">Consejos de seguridad</h3>
                <div class="mt-2 text-sm text-blue-700">
                    <ul class="list-disc list-inside space-y-1">
                        <li>Usa una contraseña única que no hayas usado en otros sitios</li>
                        <li>Combina letras mayúsculas, minúsculas, números y símbolos</li>
                        <li>Evita información personal como fechas de nacimiento</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}