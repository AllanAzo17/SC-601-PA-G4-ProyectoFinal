@model ProyectoFinal.Data.Task

@{
    ViewBag.Title = "Eliminar Tarea";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="border-b border-gray-200 pb-4">
        <h1 class="text-3xl font-bold text-gray-900">Eliminar Tarea</h1>
        <p class="mt-2 text-sm text-gray-600">Confirma la eliminación de esta tarea</p>
    </div>

    <!-- Warning Alert -->
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">¿Estás seguro de que quieres eliminar esta tarea?</h3>
                <p class="mt-2 text-sm text-red-700">Esta acción no se puede deshacer. La tarea será eliminada permanentemente del sistema.</p>
            </div>
        </div>
    </div>

    <!-- Task Information -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Información de la Tarea</h3>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Título</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Title</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Descripción</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Description</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Prioridad</dt>
                        <dd class="mt-1">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @(Model.Priority == "Alta" ? "bg-red-100 text-red-800" : Model.Priority == "Media" ? "bg-yellow-100 text-yellow-800" : "bg-gray-100 text-gray-800")">
                                @Model.Priority
                            </span>
                        </dd>
                    </div>
                </div>
                <div class="space-y-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Estado</dt>
                        <dd class="mt-1">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @(Model.Status == "Pendiente" ? "bg-yellow-100 text-yellow-800" : Model.Status == "En Proceso" ? "bg-blue-100 text-blue-800" : Model.Status == "Finalizada" ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                @Model.Status
                            </span>
                        </dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Fecha Programada</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.ScheduledDate.ToString("dd/MM/yyyy HH:mm")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Fecha de Creación</dt>
                        <dd class="mt-1 text-sm text-gray-900">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Creado Por</dt>
                        <dd class="mt-1 text-sm text-gray-900">@(Model.User?.Username ?? "N/A")</dd>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Actions -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
            <a href="@Url.Action("Index", "Tasks")" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Cancelar
            </a>
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-colors">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Eliminar Tarea
            </button>
        </div>
    }
</div>
