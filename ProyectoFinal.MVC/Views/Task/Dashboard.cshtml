@{
    ViewBag.Title = "Dashboard de las tareas";
    var resumen = ViewBag.Resumen as List<dynamic>;
    var tasks = ViewBag.Tasks as List<ProyectoFinal.Models.TaskModel>;
}

<h2>Dashboard de Tareas</h2>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["AlertMessage"]
    </div>
}

<h3>Resumen por Estado</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Estado</th>
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in resumen)
        {
            <tr>
                <td>@item.Estado</td>
                <td>@item.Cantidad</td>
            </tr>
        }
    </tbody>
</table>

<h3>Detalle de Tareas</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Fecha Ejecución</th>
            <th>Paquete</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in tasks)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Description</td>
                <td>@t.Status</td>
                <td>@t.ExecutionDate</td>
                <td>@t.Package</td>
                <td>@Html.ActionLink("Ejecutar", "EjecutarTarea", "Task", new { id = t.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>
