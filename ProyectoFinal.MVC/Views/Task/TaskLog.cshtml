@model List<ProyectoFinal.Models.TaskLog>
@{
    ViewBag.Title = "Historial de Logs";
}

<h2>Historial de Ejecución de Tareas</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tarea ID</th>
            <th>Estado</th>
            <th>Mensaje</th>
            <th>Fecha/Hora</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.TaskId</td>
                <td>@log.Status</td>
                <td>@log.Message</td>
                <td>@log.Timestamp</td>
            </tr>
        }
    </tbody>
</table>
