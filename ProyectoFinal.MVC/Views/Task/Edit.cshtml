@model ProyectoFinal.Models.TaskModel

@{
    ViewBag.Title = "Edit Task";
}

<h2>Edit Task</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Status)
            @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ExecutionDate)
            @Html.TextBoxFor(model => model.ExecutionDate, new { @class = "form-control", type = "date" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Package)
            @Html.TextBoxFor(model => model.Package, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.QueueId)
            @Html.TextBoxFor(model => model.QueueId, new { @class = "form-control" })
        </div>
        <br />
        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
